<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">

    <include
        layout="@layout/bottommenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Limb -->

    <ImageView
        android:id="@+id/iv_bg_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="-2dp"
        android:background="@android:color/darker_gray"
        android:padding="0.1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/background_light" />

    <TextView
        android:id="@+id/tv_limb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/limb"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_bg_name" />

    <!-- Weight -->

    <ImageView
        android:id="@+id/iv_bg_weight"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-2dp"
        android:background="@android:color/darker_gray"
        android:padding="0.1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_bg_name"
        app:srcCompat="@android:color/background_light" />

    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/namepatients"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg_weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_bg_weight" />

    <EditText
        android:id="@+id/editpatientname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg_weight"
        app:layout_constraintEnd_toEndOf="@+id/iv_bg_weight"
        app:layout_constraintTop_toTopOf="@+id/iv_bg_weight" />

    <!-- Weightbearing -->

    <ImageView
        android:id="@+id/iv_bg_weightbearing"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-2dp"
        android:background="@android:color/darker_gray"
        android:padding="0.1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_bg_weight"
        app:srcCompat="@android:color/background_light" />

    <TextView
        android:id="@+id/tv_weightbearing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/nametherapist"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg_weightbearing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_bg_weightbearing" />

    <EditText
        android:id="@+id/edittherapistname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg_weightbearing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_bg_weightbearing" />

    <!-- Message -->

    <ImageView
        android:id="@+id/iv_bg_messege"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-2dp"
        android:background="@android:color/darker_gray"
        android:padding="0.1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_bg_weightbearing"
        app:srcCompat="@android:color/background_light" />

    <TextView
        android:id="@+id/tv_messege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/messege"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_bg_messege" />

    <EditText
        android:id="@+id/editMessege"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_bg_messege"
        app:layout_constraintTop_toBottomOf="@+id/tv_messege" />

    <ToggleButton
        android:id="@+id/left_right"
        style="@style/AppTheme"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorText"
        android:textOff="@string/left"
        android:textOn="@string/right"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg_name"
        app:layout_constraintEnd_toEndOf="@+id/iv_bg_name"
        app:layout_constraintTop_toTopOf="@+id/iv_bg_name" />


</android.support.constraint.ConstraintLayout>